<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	
	<package name="default" extends="struts-default" namespace="/">
	
 
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="home" class="user.action.HomeAction" method="execute">
			<result name="success" type="tiles">/home.tiles</result>
		</action>
		
		<action name="LoginShow" class="user.action.LoginAction" method="show">
			<result name="success" type="tiles">/ebayLogin.tiles</result>
			<result name="error" type="tiles">/ebayLogin.tiles</result>
		</action>
		
		<action name="LoginAction" class="user.action.LoginAction" method="execute">
			<result name="success" type="tiles">/ebayLoginSuccess.tiles</result>
			<result name="failure" type="tiles">/ebayLogin.tiles</result>
			<result name="error" type="tiles">/ebayLogin.tiles</result>
		</action>
		
		<action name="ShowSubCategory" class="user.action.ShowSubCategoryAction" method="execute">
			<result name="success" type="tiles">/subcat.tiles</result>
		</action>
		
		<action name="ShowProductList" class="user.action.ShowProductListAction" method="execute">
			<result name="success" type="tiles">/productList.tiles</result>
		</action>
		
		<action name="ShowProduct" class="user.action.ShowProductAction" method="execute">
			<result name="success" type="tiles">/product.tiles</result>
		</action>
      
      <action name="SearchItemInCategory" class="user.action.SearchItemInCategoryAction" method="execute">
			<result name="success" type="tiles">/productList.tiles</result>
		</action>
		
	</package>
</struts>